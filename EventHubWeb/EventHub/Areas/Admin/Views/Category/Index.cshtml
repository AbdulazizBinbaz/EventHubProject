@using Models
@using EventHub.Utility
@model IEnumerable<Category>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-9">
            <h2 class="text-dark">Category List</h2>
        </div>
        <div class="col-3">
            <a asp-controller="Category" asp-action="Create" class="btn btn-dark ">
                Create New Category &nbsp; <i class="bi bi-plus-circle"></i>
            </a>
        </div>

    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Id
            </th>
            <th>
                Category Name
            </th>
        </tr>
    </thead>
    @foreach (var category in Model)
    {
        <tr>

            <td>@category.CategoryId</td>
            <td>@category.CategoryName</td>
            <td>
                <div class=" w-100 btn-group " role="group">
                    @if (User.IsInRole(SD.Role_Admin)) 
                    {
                        <a class=" btn btn-danger mx-2 " asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId"> Delete </a>
                    }
                </div>
            </td>
        </tr>
    }
</table>