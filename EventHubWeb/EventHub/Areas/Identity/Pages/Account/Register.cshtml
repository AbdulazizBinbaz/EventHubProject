@page
@model RegisterModel
@using EventHub.Utility
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data" >
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating p-2">
                <input asp-for="Input.Email" class="form-control"  aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating p-2 col-6">
                <input asp-for="Input.Name" class="form-control"  aria-required="true" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating p-2 col-6">
                <input type="file" name="file" class="form-control"  aria-required="true" />
                <label asp-for="Input.ProfilePictureFile"></label>
                <span asp-validation-for="Input.ProfilePictureFile" class="text-danger"></span>
            </div>
            <div class="form-floating p-2">
                <input asp-for="Input.PhoneNumber" class="form-control"  aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating p-2">
                <input asp-for="Input.Password" class="form-control"  aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating p-2">
                <input asp-for="Input.ConfirmPassword" class="form-control"  aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
             <div class=" p-2">
                <input asp-for="Input.Role" type="radio" value="@SD.Role_User_EventManager"  aria-required="true" />
                <label asp-for="Input.Role" > Register as an Event Manager</label>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
